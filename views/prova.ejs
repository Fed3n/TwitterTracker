<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="shortcut icon" href="">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Twitter Analytics</title>
    </head>
<body>
    <div id="container">

        <!-- STREAM -->
        <div id="stream">
            <label for="streamfilter">Stream Settings</label>
            <input type="text" id="streamfilter" ref="streamfilter" :enabled="!stream_on">
            <button @click="toggleStream">
                {{ stream_on ? "Start Stream" : "Close Stream" }}
            </button>
        </div>

        <!-- SEARCH / FILE-->
        <div id="addTweet">
            <label for="searchfilter">Search Settings</label>
            <input type="text" id="searchfilter" ref="searchfilter">
            <button @click="search" id="search">Search</button>
            <input type="file" id="import" value="Import" />
        </div>

        <!-- Filters -->
        <div id="filterlabels">
            <div>
                <label for="inputfilter">Tag:</label>
                <select ref="filtertype">
                    <option v-for="filter in local_filters">{{filter}}</option>
                </select>
                <input type="text" id="filerinput" ref="filterinput">
                <button id="addlabel" v-on:click="addfilter">Aggiungi</button>
            </div>
            <div id="labelscontainer">
                <div class="label" v-for="label in labels">
                    {{label.type}}: {{label.value}} <button class="delete" @click="removefilter(label)">x</button>
                </div>
            </div>
        </div>

        <!-- EXPORT -->
        <button id="export">Export</button>

        <!-- TWEET LIST -->
        <div id="tweetslist">
            <table>
                <tr>
                    <th>Utente</th><th>Contenuto</th><th>Data-Ora</th><th></th>
                </tr>
                <tr v-for="tweet in computedtweets">
                    <td> {{tweet.author_id}} </td>
                    <td> {{tweet.text}} </td>
                    <td> {{tweet.created_at}} </td>
                    <td> <button @click="showinfo(tweet)"> ... </button> </td>
                </tr>
            </table> 
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="/js/container.js"></script>
    <script src="/js/utility.js"></script>
</body>
</html>